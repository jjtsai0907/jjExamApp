<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E1626"
    tools:context=".QuestionActivity">


    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="64dp"
        android:layout_height="0dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="goBackToMaps"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/questionImageView"
        app:layout_constraintStart_toEndOf="@+id/imageButton8"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_marker_light" />

    <ImageView
        android:id="@+id/questionImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/walletTextView"
        app:srcCompat="@drawable/taipei" />


    <TextView
        android:id="@+id/walletTextView"
        android:layout_width="102dp"
        android:layout_height="46dp"
        android:layout_marginEnd="112dp"
        android:gravity="center"
        android:shadowColor="#040404"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="0.01"
        android:text="NEW"
        android:textAlignment="textStart"
        android:textColor="#27C8A9"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/shoppingImageButton"
        android:layout_width="46dp"
        android:layout_height="0dp"
        android:layout_marginEnd="52dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="goShopping"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/questionImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/flight" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="58dp"
        android:layout_height="0dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="goBackToMaps"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/questionImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="328dp"
        android:layout_height="163dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:shadowColor="#040404"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="0.01"
        android:text="Question is here"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/walletTextView" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="397dp"
        android:layout_height="202dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionTextView">

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FBF9FA"
            android:onClick="checkAnswer"
            android:shadowColor="#040404"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="0.1"
            android:tag="0"
            android:text="Taichung"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="0"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FBF9FA"
            android:onClick="checkAnswer"
            android:shadowColor="#040404"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="0.1"
            android:tag="1"
            android:text="Taichung"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="0"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FBF9FA"
            android:onClick="checkAnswer"
            android:shadowColor="#040404"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="0.1"
            android:tag="2"
            android:text="Chingshui"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="0"
            app:layout_gravity="fill"
            app:layout_row="2"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FBF9FA"
            android:onClick="checkAnswer"
            android:shadowColor="#040404"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="0.1"
            android:tag="3"
            android:text="Taichung"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="0"
            app:layout_gravity="fill"
            app:layout_row="3"
            app:layout_rowWeight="0" />


    </androidx.gridlayout.widget.GridLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="36dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/questionImageView"
        app:layout_constraintEnd_toStartOf="@+id/walletTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_money_light" />

</androidx.constraintlayout.widget.ConstraintLayout>