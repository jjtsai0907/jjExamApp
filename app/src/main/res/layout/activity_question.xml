<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionActivity">

    <ImageView
        android:id="@+id/questionImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/taipei" />

    <TextView
        android:id="@+id/walletTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="$"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/imageButton8"
        app:layout_constraintStart_toEndOf="@+id/currentCountryTextView"
        app:layout_constraintTop_toTopOf="@+id/questionImageView" />

    <TextView
        android:id="@+id/currentCountryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:text="Country"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/questionImageView" />

    <ImageButton
        android:id="@+id/shoppingImageButton"
        android:layout_width="52dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="goShopping"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/questionImageView"
        app:srcCompat="@drawable/shopping" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="goBackToMaps"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/shoppingImageButton"
        app:layout_constraintTop_toTopOf="@+id/questionImageView"
        app:srcCompat="@drawable/globewhite" />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="328dp"
        android:layout_height="163dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:text="Question is here"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/walletTextView" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="397dp"
        android:layout_height="202dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionTextView">

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FBF9FA"
            android:onClick="checkAnswer"
            android:tag="0"
            android:text="Taichung"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="0"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FBF9FA"
            android:onClick="checkAnswer"
            android:tag="1"
            android:text="Taichung"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="0"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FBF9FA"
            android:onClick="checkAnswer"
            android:tag="2"
            android:text="Chingshui"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="0"
            app:layout_gravity="fill"
            app:layout_row="2"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FBF9FA"
            android:onClick="checkAnswer"
            android:tag="3"
            android:text="Taichung"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="0"
            app:layout_gravity="fill"
            app:layout_row="3"
            app:layout_rowWeight="0" />


    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>