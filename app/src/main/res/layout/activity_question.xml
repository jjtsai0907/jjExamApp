<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="452dp"
        android:layout_height="661dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/taipei" />

    <TextView
        android:id="@+id/walletTextView"
        android:layout_width="96dp"
        android:layout_height="57dp"
        android:layout_marginTop="32dp"
        android:text="$"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/imageButton8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/currentCountryTextView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/currentCountryTextView"
        android:layout_width="112dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Country"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="361dp"
        android:layout_height="183dp"
        android:layout_marginTop="46dp"
        android:text="Question is here"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/walletTextView" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="383dp"
        android:layout_height="269dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionTextView"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FBF9FA"
            android:onClick="checkAnswer"
            android:tag="0"
            android:text="Taichung"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="0"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FBF9FA"
            android:onClick="checkAnswer"
            android:tag="1"
            android:text="Taichung"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="0"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FBF9FA"
            android:onClick="checkAnswer"
            android:tag="2"
            android:text="Chingshui"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="0"
            app:layout_gravity="fill"
            app:layout_row="2"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FBF9FA"
            android:onClick="checkAnswer"
            android:tag="3"
            android:text="Taichung"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="0"
            app:layout_gravity="fill"
            app:layout_row="3"
            app:layout_rowWeight="0" />


    </androidx.gridlayout.widget.GridLayout>

    <ImageButton
        android:id="@+id/shoppingImageButton"
        android:layout_width="66dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="goShopping"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@drawable/shopping" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="73dp"
        android:layout_height="61dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="1dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="goBackToMaps"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/shoppingImageButton"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@drawable/globewhite" />

</androidx.constraintlayout.widget.ConstraintLayout>